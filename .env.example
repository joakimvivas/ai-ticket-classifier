# ============================================================================
# AI Support Ticket Classifier - Environment Configuration
# ============================================================================

# Application Configuration
# ----------------------------------------------------------------------------
FASTAPI_ENV=local                    # local | production
DEBUG=true                           # Enable debug mode for development
MAX_TICKETS_PER_BATCH=100           # Maximum tickets to classify in one batch

# OpenAI API Configuration
# ----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini            # Model for classification (gpt-4o-mini recommended)
OPENAI_TEMPERATURE=0.3               # Lower = more deterministic (0.0-1.0)
OPENAI_MAX_TOKENS=300                # Maximum tokens per classification

# Inngest Configuration (Background Processing)
# ----------------------------------------------------------------------------
# Dev mode: Local Inngest server (no keys needed)
INNGEST_DEV_SERVER_URL=http://localhost:8288
INNGEST_DEV_MODE=true

# Qdrant Vector Database (Semantic Search)
# ----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your_qdrant_api_key_optional

# Supabase (Production - Optional)
# ----------------------------------------------------------------------------
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_KEY=your_supabase_service_key_here

# Application Server
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
RELOAD=true                          # Hot reload for development

# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO                       # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json                      # json | text
